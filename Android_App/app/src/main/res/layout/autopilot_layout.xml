<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnApproachMode"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:text="APR"
        app:layout_constraintStart_toStartOf="@+id/btnNavMode"
        app:layout_constraintTop_toBottomOf="@+id/btnNavMode" />

    <Button
        android:id="@+id/btnWT_CJ4_FMC_0"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="164dp"
        android:text='FMC "0" key'
        app:layout_constraintStart_toStartOf="@+id/btnNavMode"
        app:layout_constraintTop_toBottomOf="@+id/btnNavMode" />

    <Button
        android:id="@+id/btnAutoPilot"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="AP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnHeading"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:text="HDG"
        app:layout_constraintStart_toStartOf="@+id/btnAutoPilot"
        app:layout_constraintTop_toBottomOf="@+id/btnAutoPilot" />

    <Button
        android:id="@+id/btnNavMode"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:text="NAV"
        app:layout_constraintStart_toStartOf="@+id/btnHeading"
        app:layout_constraintTop_toBottomOf="@+id/btnHeading" />

    <Button
        android:id="@+id/btnAltitudeHoldMode"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="ALT"
        android:layout_marginLeft="24dp"
        app:layout_constraintStart_toEndOf="@+id/btnHeading"
        app:layout_constraintTop_toTopOf="@+id/btnHeading" />

</androidx.constraintlayout.widget.ConstraintLayout>